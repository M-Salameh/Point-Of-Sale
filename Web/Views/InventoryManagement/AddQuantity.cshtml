@{
    Layout = "_Layout";
    ViewData["Logo"] = "Products";
}

@model Web.Models.SupplierEntry
<div class="page-heading bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <h1>Buy Some Items Of The Product With Code <b>@Model.Product.Id</b> From @Model.Supplier.Name </h1>
                <p class="mb-4"><a>Inventory</a> / <strong>Add Items</strong></p>
            </div>
        </div>
    </div>
</div>

<div class="untree_co-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-7 mr-auto order-1" data-aos="fade-up" data-aos-delay="200">
                <form method="post" action="@Url.Action("AddEntry", "InventoryManagement")">
                    <div class="row">

                        <div class="d-none">
                            <input type="number" asp-for="Supplier.Id" class="d-none" placeholder="">
                        </div>
                        <div class="d-none">
                            <input type="number" asp-for="Product.Id" class="d-none" placeholder="">
                        </div>
                        <div class="col-6 mb-3">
                            <label>Name</label>
                            <input id="name-no-number" type="text" asp-for="Product.Name" class="form-control" placeholder="Product Name" disabled>
                        </div>

                        <span asp-validation-for="Product.Name" class="text-danger"
                              style="font-family:Open Sans;padding-left:15px;
                                    padding-top:5px;padding-bottom:15px;transition:all 1s;"></span>


                        <div class="col-6 mb-3">
                            <label>Price</label>
                            <input  id="no-negative" type="number" asp-for="Product.Price" class="form-control" placeholder="Product Price">
                        </div>
                        <span asp-validation-for="Product.Price" class="text-danger"
                              style="font-family:Open Sans;padding-left:15px;
                                    padding-top:5px;padding-bottom:15px;transition:all 1s;"></span>

                        <div class="d-none">
                            <input type="text" asp-for="Product.Description" class="d-none">
                        </div>



                        <div class="d-none">
                            <input type="text" asp-for="Product.Image" class="d-none">
                        </div>

                        <div class="col-6 mb-3">
                            <label>Quantity</label>
                            <input  id="no-negative-quantity" type="number" asp-for="Product.Quantity" class="form-control" placeholder="Product Quantity">
                        </div>
                        <span asp-validation-for="Product.Quantity" class="text-danger"
                              style="font-family:Open Sans;padding-left:15px;
                                    padding-top:5px;padding-bottom:15px;transition:all 1s;"></span>

                        <div class="col-12">
                            <input type="submit" value="Add This Quantity For @Model.Product.Name" class="btn btn-primary">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <script src="~/JQuery/JQ.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/typed.js@@2.0.12"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.js"></script>
    <script src="~/LayoutAssets/js/aos.js"></script>
    <script src="~/LayoutAssets/js/jq.js"></script>
    <script src="~/LayoutAssets/js/jquery.sticky.js"> </script>
    <script src="~/LayoutAssets/js/custom.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/typed.js@@2.0.12"></script>
    <script>
        $(document).ready(function () {
            $('#name-no-number').on('input', () => {
                setTimeout(() => {
                    let items = $('#name-no-number').val();
                    var newValue = items.replace(/\d+/g, '');
                    $('#name-no-number').val(newValue);
                }, 1000)
            });

            $('#no-negative').on('input', () => {
                setTimeout(() => {
                    let value = $('#no-negative').val();
                    if (value <= 0) {
                        $('#no-negative').val(1);
                    }
                }, 1000)
            });

            $('#no-negative-quantity').on('input', () => {
                setTimeout(() => {
                    let value = $('#no-negative-quantity').val();
                    if (value <= 0) {
                        $('#no-negative-quantity').val(1);
                    }
                }, 1000)
            });
        });
    </script>
    }