@{
    ViewData["Title"] = "E SHOP";
    ViewData["Logo"] = "E-SHOP";
    ViewData["image"] = "https://localhost:44355/images/background.jpg";
    ViewData["image3"] = "/images/girls.png";

    Layout = "_Layout";
}
<link rel="stylesheet" href="~/LayoutAssets/css/animate.min.css">
<link rel="stylesheet" href="~/LayoutAssets/css/style.css">
<link rel="stylesheet" href="~/LayoutAssets/css/layoutStuff.css">
<link rel="stylesheet" href="~/LayoutAssets/css/cards.css">
<link rel="stylesheet" href="~/LayoutAssets/css/eye.css">
<link rel="stylesheet" href="~/LayoutAssets/css/typer.css">

<div class="untree_co-hero" style="background-image: url('./images/background.jpg');">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-8 text-center text-lg-center">
                <h1 class="mb-4 heading text-white" data-aos="fade-up" data-aos-delay="100">
                    Shop in our Store</a>
                </h1>
                <p class="mb-0" data-aos="fade-up" data-aos-delay="300"><a href="#services" class="btn btn-black">Our Services</a></p>
            </div>
        </div>
    </div>
</div>


<div class="section " style="padding-bottom:40px !important;" id="services">
    <div class="container mt-5">
        <div class="d-flex justify-content-center mb-3">
            <div class="typewriter ">
                <div class="slide "><i></i></div>
                <div class="paper "></div>
                <div class="keyboard "></div>
            </div>
        </div>
        <div class="row p-1">
            <h1 class="text-center logo" style="font-size: 20px;text-decoration: none !important;">Point Of Sale</h1>
        </div>

        <div class="row mt-5">
            <div class="col-lg-4 col-sm-12">
                <div class="good-card good-card3">
                    <a asp-controller="Orders" asp-action="index" class="good-card-link">
                        <div class="backgrounder"></div>

                        <div class="good-card-title">
                            Orders And History
                        </div>
                        <apan style="font-size:13px; color:whitesmoke!important">Get All Orders Between Two Dates.</apan>

                    </a>
                </div>

            </div>

            <div class="col-lg-4 col-sm-12">
                <div class="good-card good-card4">
                    <a asp-controller="PointOfSale" asp-action="index" class="good-card-link">
                        <div class="backgrounder"></div>

                        <div class="good-card-title">
                            Add New Order
                        </div>
                        <apan style="font-size:13px; color:whitesmoke!important">Start The Process To Add A New Order.</apan>
                    </a>
                </div>

            </div>


            <div class="col-lg-4 col-sm-12">
                <div class="good-card good-card1">
                    <a asp-controller="Orders" asp-action="SelectCustomers" class="good-card-link" class="good-card-link">
                        <div class="backgrounder"></div>

                        <div class="good-card-title">
                            Customers Orders.
                        </div>
                        <apan style="font-size:13px; color:whitesmoke!important">Get Customers Orders by Name.</apan>

                    </a>
                </div>
            </div>
        </div>
    </div>
</div>




<div class="section mb-3" style="background-color: aliceblue;">
    <div class="container">
        <div class="d-flex justify-content-center">
            <div class="eye"></div>
        </div>
        <div class="row p-1">
            <h1 class="text-center logo" style="font-size: 20px;text-decoration: none !important;">Inventory Management</h1>
        </div>


        <div class="row mt-5">
            <div class="col-md-6 col-sm-12">
                <div class="good-card good-card5">
                    <a asp-controller="InventoryManagement" asp-action="index" class="good-card-link">
                        <div class="backgrounder"></div>

                        <div class="good-card-title">
                            Buy Some Products
                        </div>
                        <apan style="font-size:13px; color:whitesmoke!important">Start The Process To Buy Some Products From A Supplier.</apan>

                    </a>
                </div>

            </div>

            <div class="col-md-6 col-sm-12">
                <div class="good-card good-card2">
                    <a asp-controller="InventoryManagement" asp-action="SelectSupplier" class="good-card-link">
                        <div class="backgrounder"></div>

                        <div class="good-card-title">
                            See Inventory Transactions
                        </div>
                        <apan style="font-size:13px; color:whitesmoke!important">What Did Each Supplier Bring From Products?</apan>

                    </a>
                </div>

            </div>

        </div>

    </div>
</div>
@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe " crossorigin="anonymous"></script>
    <script src="~/LayoutAssets/js/aos.js"></script>
    <script src="~/LayoutAssets/js/jq.js"></script>
    <script src="~/LayoutAssets/js/jquery.sticky.js"> </script>
    <script src="~/LayoutAssets/js/custom.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/typed.js@@2.0.12"></script>

    <script>
       
        $('#home').addClass('active');
    </script>
}