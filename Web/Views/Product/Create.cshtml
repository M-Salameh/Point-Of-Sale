@{
    Layout = "_Layout";
}

@model Web.Models.UploadProductViewModel
<div class="page-heading bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <h1>Add New Product Into The Inventory</h1>
                <p class="mb-4"><a>Products</a> / <strong>Add</strong></p>
            </div>
        </div>
    </div>
</div>
<div class="untree_co-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-7 mr-auto order-1" data-aos="fade-up" data-aos-delay="200">
                <form method="post" action="@Url.Action("UploadProduct", "UploadProduct")" enctype="multipart/form-data">
                    <div class="row">
                        <div class="d-none">
                            <input type="number" asp-for="Quantity" class="d-none" value="0">
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label" asp-for="Name"></label>
                            <input id="name-no-number" type="text" asp-for="Name" class="form-control" placeholder="Product Name">
                        </div>

                        <span asp-validation-for="Name" class="text-danger"
                              style="font-family:Open Sans;padding-left:15px;
                                    padding-top:5px;padding-bottom:15px;transition:all 1s;"></span>


                        


                        <div class="col-6 mb-3">
                            <label class="form-label" asp-for="Price"></label>
                            <input id="no-negative" type="number" asp-for="Price" class="form-control" placeholder="Product Price">
                        </div>
                        <span asp-validation-for="Price" class="text-danger"
                              style="font-family:Open Sans;padding-left:15px;
                                    padding-top:5px;padding-bottom:15px;transition:all 1s;"></span>

                        <div class="col-6 mb-3">
                            <label class="form-label" asp-for="AlertQuantity"></label>

                            <input type="number" asp-for="AlertQuantity" class="form-control" placeholder="Alert Quantity">
                        </div>
                        <span asp-validation-for="AlertQuantity" class="text-danger"
                              style="font-family:Open Sans;padding-left:15px;
                                    padding-top:5px;padding-bottom:15px;transition:all 1s;"></span>



                        <div class="col-12 mb-3">
                            <label class="form-label" asp-for="Description"></label>

                            <textarea asp-for="Description" cols="30" rows="7" class="form-control" placeholder="Product Description"></textarea>
                        </div>
                        <span asp-validation-for="Description" class="text-danger"
                              style="font-family:Open Sans;padding-left:15px;
                                    padding-top:5px;padding-bottom:15px;transition:all 1s;"></span>



                        <div class="col-12 mb-3">
                        <label class="form-label" asp-for="ImageFile"></label>
                            <input style="height:auto;" type="file" asp-for="ImageFile" class="form-control" placeholder="Image">
                        </div>

                        <span asp-validation-for="ImageFile" class="text-danger"
                              style="font-family:Open Sans;padding-left:15px;
                                    padding-top:5px;padding-bottom:15px;transition:all 1s;"></span>



                        <div class="col-12">
                            <input type="submit" value="Add Product" class="btn btn-primary">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <script src="~/JQuery/JQ.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.js"></script>
    <script>
        $(document).ready(function () {
            $('#name-no-number').on('input', () => {
                setTimeout(() => {
                    let items = $('#name-no-number').val();
                    var newValue = items.replace(/\d+/g, '');
                    $('#name-no-number').val(newValue);
                }, 1000)
            });

            $('#no-negative').on('input', () => {
                setTimeout(() => {
                    let value = $('#no-negative').val();
                    if (value <= 0) {
                        $('#no-negative').val(1);
                    }
                }, 1000)
            });
        });
    </script>
}