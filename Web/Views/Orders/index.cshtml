@{
    Layout = "_Layout";
}


<link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

<link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500&display=swap" rel="stylesheet">


<link rel="stylesheet" href="~/DatePickerAssets/fonts/icomoon/style.css">

<link rel="stylesheet" href="~/DatePickerAssets/css/rome.css">


<link rel="stylesheet" href="~/DatePickerAssets/css/bootstrap.min.css">

<link rel="stylesheet" href="~/DatePickerAssets/css/style.css">

<div class="page-heading bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <h1>Select The Start And End Days</h1>
                <p class="mb-4"><a>Inventory</a> / <strong>History</strong></p>
            </div>
        </div>
    </div>
</div>
<div class="content">

    <div class="container text-left">

        <div class="row justify-content-center">
            <div class="col-md-10 text-center">
                <div class="d-flex">
                </div>
                <div class="row">
                    <div class="col-lg-6 mb-4">
                        <h2> Start Date</h2>
                        <div id="inline_cal_from"></div>
                    </div>
                    <div class="col-lg-6 mb-4">
                        <h2>End Date</h2>

                        <div id="inline_cal_to"></div>
                    </div>
                </div>
            </div>
        </div>
        <form asp-action="GetOrders" asp-controller="Orders" method="post" class="d-flex justify-content-center">

            <div class="d-none">

                <label for="startDate" class="d-none">
                    startDate
                </label>

                <input type="text" name="startDate" class="m-2 d-none mb-3" placeholder="startDate" id="result_from" required>
            </div>
            <div class="d-none">
                <label for="endDate" class="d-none">
                    endDate
                </label>
                <input type="text" name="endDate" class="m-2 d-none mb-3" placeholder="endDate" id="result_to" required>

            </div>
            <input type="submit" value="Get The Orders" class="btn btn-primary" />

        </form>

    </div>
</div>




@section Scripts {

    <script src="~/DatePickerAssets/js/jquery-3.3.1.min.js"></script>
    <script src="~/DatePickerAssets/js/popper.min.js"></script>
    <script src="~/DatePickerAssets/js/bootstrap.min.js"></script>
    <script src="~/DatePickerAssets/js/rome.js"></script>
    <script src="~/DatePickerAssets/js/main.js"></script>
    }
