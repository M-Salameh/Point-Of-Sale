<div class="page-heading bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7" style="padding-top:20px">
                <h1>Products Entry Infomation</h1>
                <p class="mb-4"><a href="#">Products</a> / <strong>Inventory, Entry With Code Number @Model.First().Id</strong></p>
             
            </div>
        </div>
    </div>
</div>


<div class="container">

    @if (Model.Count == 0 || Model == null)
    {
        <div class="d-flex justify-content-center">
            <div class="no-data flex-column" style="padding-top:40px;">
                <div class="no-data-animation"></div>
                <div id="No-Data-Error" class=" container text-center" style="
                                            display:flex;align-items:center;justify-content:center;color:white;
                                            transition:all 0.9s; margin-top:40px;margin-bottom:40px">
                There are No Results Sorry...
                </div>
            </div>
        </div>
    }
    else
    {


      


        <div class="container">

            <div class="row mb-5">
                <div class="site-blocks-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="product-name">Product Name</th>
                                <th class="product-price">Buying Price</th>
                                <th class="product-quantity">Quantity</th>
                                <th class="product-quantity">Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                   
                                    <td class="product-name">
                                        <h2 class="h5 text-black">@item.Product.Name</h2>
                                    </td>
                                    <td>$@item.Price</td>
                                    <td>
                                        @if (@item.Quantity > 0)
                                        {
                                            <span>@item.Quantity</span>
                                        }
                                        else
                                        {
                                            <span>0</span>
                                        }
                                    </td>
                                    <td>$@item.CreatedAt</td>                                  
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>







