@{
	ViewData["Title"] = "E SHOP";
	ViewData["Logo"] = "E-SHOP";
	ViewData["image"] = "https://localhost:44355/images/background.jpg";
	ViewData["image3"] = "/images/girls.png";

	Layout = "_Layout";
}

@model List<Web.Models.NotificationViewModel>
<div class="page-heading bg-light">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-lg-12" style="padding-top:20px">
				<h1>
					System Notifications
					<svg xmlns="http://www.w3.org/2000/svg" fill="#000000" width="50px" height="50px" viewBox="0 0 24 24" id="notification-circle" data-name="Flat Line" class="icon flat-line">

						<g id="SVGRepo_bgCarrier" stroke-width="0" />

						<g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round" />

						<g id="SVGRepo_iconCarrier">

							<path id="secondary" d="M18,13V9c0-.06,0-.12,0-.18A3,3,0,0,1,17,9a3,3,0,0,1-3-3,2.94,2.94,0,0,1,1-2.2A5.9,5.9,0,0,0,12,3,6,6,0,0,0,6,9v4L4.62,14.38A2.12,2.12,0,0,0,6.12,18H17.88a2.12,2.12,0,0,0,1.5-3.62Z" style="fill: #23a4b8; stroke-width: 2;" />

							<path id="primary" d="M18,9v4l1.38,1.38A2.12,2.12,0,0,1,17.88,18H6.12a2.12,2.12,0,0,1-1.5-3.62L6,13V9a6,6,0,0,1,6-6,6,6,0,0,1,2.88.73" style="fill: none; stroke: #000000; stroke-linecap: round; stroke-linejoin: round; stroke-width: 2;" />

							<path id="primary-2" data-name="primary" d="M12,21h0a3,3,0,0,1-3-3h6A3,3,0,0,1,12,21ZM14,6a3,3,0,0,0,3,3h0a3,3,0,0,0,3-3h0a3,3,0,0,0-3-3h0a3,3,0,0,0-3,3Z" style="fill: none; stroke: #000000; stroke-linecap: round; stroke-linejoin: round; stroke-width: 2;" />

						</g>

					</svg>
				</h1>
				<p class="mb-4"><a href="#">Notifications</a> / <strong>All</strong></p>

				<div class="mb-5">
					<a asp-action="Add" asp-controller="Notification" class="btn btn-outline-black btn-sm btn-block">Broadcast New Notification</a>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="container">

	<div class="row mb-5">
		<div class="site-blocks-table">
			<h2 class="text-center m-4">
			</h2>

			<table class="table table-bordered">
				<thead>
					<tr>

						<th class="product-quantity">Title</th>
						<th class="product-remove">Message</th>
						<th class="product-remove">Time</th>
					</tr>
				</thead>
				<tbody id="notificationPlace">
					@foreach (var item in Model)
					{

						<tr>
							<td class="product-name">
								@item.MessageSubject
							</td>
							<td>
								@item.MessageContent
							</td>
							<td>
								@item.BroadCastedAt
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>


<style>
	.active-noti {
		border-bottom: 1px solid black;
	}
</style>



@section Scripts{
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe " crossorigin="anonymous"></script>
	<script src="~/LayoutAssets/js/aos.js"></script>
	<script src="~/LayoutAssets/js/jq.js"></script>
	<script src="~/LayoutAssets/js/jquery.sticky.js"> </script>
	<script src="~/LayoutAssets/js/custom.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/typed.js@@2.0.12"></script>

	<script>

		$('#notification').addClass('active-noti');
	</script>
}